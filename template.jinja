%!TEX TS-program = xelatex
%!TEX encoding = UTF-8 Unicode
% Alicia Sykes CV LaTeX Template

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Configuration
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% Themes: Awesome-CV
\documentclass[]{resume-format}
\usepackage{textcomp}
%%% Override a directory location for fonts(default: 'fonts/')
\fontdir[fonts/]

%%% Configure a directory location for sections
\newcommand*{\sectiondir}{resume/}

%%% Override color
% Awesome Colors: awesome-emerald, awesome-skyblue, awesome-red, awesome-pink, awesome-orange
%                 awesome-nephritis, awesome-concrete, awesome-darknight
%% Color for highlight
% Define your custom color if you don't like awesome colors
\colorlet{awesome}{awesome-red}
%\definecolor{awesome}{HTML}{CA63A8}
%% Colors for text
%\definecolor{darktext}{HTML}{414141}
%\definecolor{text}{HTML}{414141}
%\definecolor{graytext}{HTML}{414141}
%\definecolor{lighttext}{HTML}{414141}

%%% Override a separator for social informations in header(default: ' | ')
%\headersocialsep[\quad\textbar\quad]
\begin{document}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Profile
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\begin{center}
    {% raw %}\headerfirstnamestyle{% endraw %}{ {{ basics.name.split(' ')[0] | latex_escape }} } {% raw %}\headerlastnamestyle{% endraw %}{ {{ basics.name.split(' ')[1] | latex_escape }} } \\
    \vspace{2mm}
    {\faEnvelope\ {{ basics.email | latex_escape }}} | {\faMapMarker\ {{ basics.location.address | latex_escape }}} | {\faLink\ \href{ {{ basics.url | latex_escape }} }{ {{ basics.url | latex_escape }} }}
\end{center}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Personal Statement
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
{% if personal_statement %}
\begin{cvpersonalstatement}
  \item { {{ personal_statement | latex_escape }} }
\end{cvpersonalstatement}
{% endif %}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Experience
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
{% if work %}
\cvsection{Experience}
\begin{cventries}
{%- for job in work %}
    \cventry
    { {{ job.position | latex_escape }} }
    { {{ job.name | latex_escape }} }
    {}
    { {{ job.startDate | latex_escape | format_date }} – {{ job.endDate | latex_escape | format_date if job.endDate else 'Present' | latex_escape }} }
    {\begin{cvitems}
        {%- for highlight in job.highlights %}
        \item { {{ highlight | latex_escape }} }
        {%- endfor %}
    \end{cvitems}}
{%- endfor %}
\end{cventries}
{% if extra_links.work_history %}
    \vspace{-5mm}
    \begin{flushright}
        \small\color{lightgray} \href{ {{ extra_links.work_history.link | latex_escape }} }{{ extra_links.work_history.text | latex_escape }}
    \end{flushright}
{% endif %}
{% endif %}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Education
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
{% if education %}
\cvsection{Education}
\begin{cventries}
{%- for edu in education %}
    \cventry
    { {{ edu.studyType | latex_escape }} in {{ edu.area | latex_escape }} }
    { {{ edu.institution | latex_escape }} }
    {}
    {}
    {Grade: {{ edu.score | latex_escape }}}
{%- endfor %}
\end{cventries}
{% endif %}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Skills
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
{% if skills %}
\cvsection{Skills}
\vspace{0.5mm}  % match Stats/Awards
\begin{cvskills}
{%- for skill in skills %}
  \cvskill{ {{ skill.name | latex_escape }} }{ {{ skill.keywords | join(', ') | latex_escape }} }
{%- endfor %}
\end{cvskills}
{% endif %}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Achievements Statistics
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
{% if achievements %}
\cvsection{Stats}
\vspace{0.5mm}
\begin{cvachievements}
\setlength{\itemsep}{0mm}
{%- for ach in achievements %}
  \item { {{ ach.text | markdown_to_latex | safe }}{% if ach.source %} \href{ {{ ach.source | latex_escape }} }{\scriptsize\color{lightgray}\faLink}{% endif %} }
{%- endfor %}
\end{cvachievements}
{%- endif %}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Awards
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
{% if awards %}
\cvsection{Awards}
\vspace{0.5mm}
\begin{cvachievements}
\setlength{\itemsep}{0mm}
{%- for award in awards %}
  \item { \textbf{ {{ award.title   | latex_escape }} } - {{ award.summary | latex_escape }}{% if award.source %} \href{ {{ award.source | latex_escape }} }{\scriptsize\color{lightgray}\faLink}{% endif %} }
{%- endfor %}
\end{cvachievements}
{% endif %}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Projects
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
{% if projects %}
\cvsection{Projects}
\vspace{0.5mm}
\begin{cvachievements}
  \setlength{\itemsep}{0mm}
{%- for proj in projects %}
  %— Project first line
  \item {
    \href{ {{ proj.url | latex_escape }} }{ \textbf{ {{ proj.name | latex_escape }} }}
    - {{ proj.description | latex_escape }}
  }
  % Project second line
  \vspace{-1mm}
  %— detail line, indented, with its own itemize
  \begin{itemize}[leftmargin=4ex, nosep, itemsep=-0.2mm]
    \item {
    \href{https://github.com/{{ proj.github | latex_escape }}}{\faGithub\ {{ proj.github | latex_escape }}}
      \quad|\quad {{ proj.language | latex_escape }}
      \quad|\quad \faStar\ {{ proj.stars | latex_escape }}
    }
  \end{itemize}
{%- endfor %}
\end{cvachievements}
{% endif %}



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Footer
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\vspace{10mm}
\begin{flushleft}
    \tiny\color{lightgray} \href{https://github.com/lissy93/cv}{ View CV source at github.com/lissy93/cv}
\end{flushleft}
\ 
\end{document}
